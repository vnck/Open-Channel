<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF9F4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ProfileItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_user" />

            <TextView
                android:id="@+id/ProfileItemName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ProfileItem1"
                android:layout_toRightOf="@id/ProfileItem1"
                android:text="First Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfileItemName"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ProfileItem1"
                android:layout_toRightOf="@id/ProfileItem1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ProfileItem1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_user"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ProfileItemLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ProfileItem1_2"
                android:layout_toRightOf="@id/ProfileItem1_2"
                android:text="Last Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfileItemLastName"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ProfileItem1_2"
                android:layout_toRightOf="@id/ProfileItem1_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ProfileItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_user"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ProfileItemID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ProfileItem2"
                android:layout_toRightOf="@id/ProfileItem2"
                android:text="NRIC"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_nric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfileItemID"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ProfileItem2"
                android:layout_toRightOf="@id/ProfileItem2"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ProfileItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_user"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ProfileItemDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ProfileItem3"
                android:layout_toRightOf="@id/ProfileItem3"
                android:text="Date of Birth"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ProfileItemDOB"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ProfileItem3"
                android:layout_toRightOf="@id/ProfileItem3"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ContactItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_contact" />

            <TextView
                android:id="@+id/ContactItemMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ContactItem1"
                android:layout_toRightOf="@id/ContactItem1"
                android:text="Mobile Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_hp_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ContactItemMobile"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ContactItem1"
                android:layout_toRightOf="@id/ContactItem1"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ContactItem1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_contact"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ContactItemHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ContactItem1_2"
                android:layout_toRightOf="@id/ContactItem1_2"
                android:text="Home Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_home_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ContactItemHome"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ContactItem1_2"
                android:layout_toRightOf="@id/ContactItem1_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ContactItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_contact"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ContactItemEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ContactItem2"
                android:layout_toRightOf="@id/ContactItem2"
                android:text="Email"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ContactItemEmail"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ContactItem2"
                android:layout_toRightOf="@id/ContactItem2"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ContactItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_contact"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ContactItemAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ContactItem3"
                android:layout_toRightOf="@id/ContactItem3"
                android:text="Home Address"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ContactItemAddress"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ContactItem3"
                android:layout_toRightOf="@id/ContactItem3"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:padding="@dimen/fragment_horizontal_margin">

            <ImageView
                android:id="@+id/ContactItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/fragment_horizontal_margin"
                android:layout_marginRight="@dimen/fragment_horizontal_margin"
                android:src="@drawable/oc_contact"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/ContactItemPostalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_toEndOf="@id/ContactItem4"
                android:layout_toRightOf="@id/ContactItem4"
                android:text="Postal Code"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/primaryBlack" />

            <TextView
                android:id="@+id/user_postal_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ContactItemPostalCode"
                android:layout_marginStart="@dimen/fragment_horizontal_margin"
                android:layout_marginLeft="@dimen/fragment_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/ContactItem4"
                android:layout_toRightOf="@id/ContactItem4"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#727272" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>